<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina de Posts</title>
    <link rel="stylesheet" href="statics/main.css">
    <script src="https://kit.fontawesome.com/59a9a8209a.js" crossorigin="anonymous"></script>
    <script src="statics/jquery-3.5.1.min.js"></script>
    <script src="statics/main.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400&display=swap" rel="stylesheet">
</head>

<body>
    <header class="header">
        <h2 class="header__title">
            Pagina de Posts
        </h2>

        <nav class="header__menu">
            <ul class="header__list">
                <li class="header__item"><a href="#" class="header__link">Principal</a></li>
                <li class="header__item"><a href="#" class="header__link">Contacto</a></li>
                <li class="header__item"><a href="#" class="header__link">Categoria 1</a></li>
                <li class="header__item"><a href="#" class="header__link">Categoria 2</a></li>
                <li class="header__item"><a href="#" class="header__link">Categoria 3</a></li>
            </ul>
        </nav>
    </header>
    <div class="container">

        <div class="container__main">

            <% data.forEach(element => { %>
                <a href="#" class="container__article">
                    <h2 class="container__articleTitle"><%= element.title %></h2>
                    <p class="container__articleDescription">
                        <%= element.description %>
                    </p>
                    <span class="container__articleUser">Creado por: <%= element.user %></span>
                </a>
            <% }) %>

        </div>

        <aside class="container__aside">
            <% if (log == true) { %>
              <div class="container__user">
                  <div class="container__userImg" style="background-image: url('public/<%=cookies.image%>');">

                  </div>
                  <h3 class="container__userName">Bienvenido, <%= cookies.name %> </h3>
                  <h3 class="container__userNick">Usuario: <%= cookies.nick %> </h3>
                  <h3 class="container__userEmail">Correo: <%= cookies.email %> </h3>
                  <a href="/logout" class="container__userLogOut">
                    Cerrar Sesion
                  </a>
              </div>
            <% } %>
            <% if (log != true){ %>
                <form action="/create-user" class="container__form container__form--register" method="POST"
                enctype="multipart/form-data">
                <h2>Crear Usuario</h2>

                <div class="container__formContainer">
                    <input type="file" name="image" id="image">
                    <i class="fas fa-camera" id="image"></i>
                </div>

                <label for="name">Nombre: </label>
                <input type="text" name="name">

                <label for="nick_name">Usuario: </label>
                <input type="text" name="nick_name">

                <label for="email">Email: </label>
                <input type="email" name="email">

                <label for="password">Contraseña: </label>
                <input type="password" name="password">

                <button type="submit">
                    Crear Usuario
                </button>

                <a id="change-login">
                    O ya tienes una cuenta ?
                </a>

            </form>

            <form action="/login" class="container__form container__form--login" method="POST" enctype="multipart/form-data">
                <h2>Iniciar Sesion</h2>
                 <% if (log == 'FAILED') { %>
                    <div class="alert lert-error">
                        Error Al Inicar Session Ingresa Bien Los Datos
                    </div>
                 <% } %>
                <label for="email">Email: </label>
                <input type="email" name="email">

                <label for="password">Contraseña: </label>
                <input type="password" name="password">

                <button type="submit">
                    Iniciar Sesion
                </button>

                <a id="change-register">
                    O no tienes una cuenta ?
                </a>

                </form>
            <% } %>
            
        </aside>

    </div>

</body>

</html>